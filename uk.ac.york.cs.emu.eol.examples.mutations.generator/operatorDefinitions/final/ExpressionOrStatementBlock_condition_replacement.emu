// 3.0: replacing of LogicalExpression (and, or, xor, implies)
// 3.1: replacing AndOperatorExpression with others
// 3.1.1: replacing AndOperatorExpression with or
@action replace
@property condition
pattern replacing_and_operator_with_or
instance:ExpressionOrStatementBlock
	in: ExpressionOrStatementBlock.all.select(e|e.condition.isDefined())
	guard: instance.condition.isTypeOf(AndOperatorExpression) {
	do {
		var new_op = OrOperatorExpression.createInstance();
		new_op.lhs = instance.condition.lhs;
		new_op.rhs = instance.condition.rhs;
		
		instance.condition = new_op;
	}
}
