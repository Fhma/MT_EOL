// operator: ExpressionOrStatementBlock_condition-REP
// desc: manipulates the condition of a statement block
//
// Inherited operators: n/a 
////////////////////////////////////////////////////////////

// 1.0: Inverse the state of condtion (adding not)
// 1.1: inversing BinaryOperator expression
@action replace
@property condition
pattern inverting_binary_operator
instance:ExpressionOrStatementBlock 
	in: ExpressionOrStatementBlock.all.select(e|e.condition.isDefined())
	guard: instance.condition.isKindOf(BinaryOperatorExpression) {
	do {
		var new_op = NotOperatorExpression.createInstance();
		new_op.expression = instance.condition;
		
		instance.condition = new_op;
	}
}

